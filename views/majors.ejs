<!-- Page Header -->
<section class="bg-gradient-success text-white py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-3 fade-in">
                    <i class="fas fa-graduation-cap me-3 text-warning"></i>Find Careers by Major
                </h1>
                <p class="lead mb-0 fade-in" style="animation-delay: 0.2s; color: rgba(255, 255, 255, 0.95); text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);">
                    Select your course major to explore related career opportunities
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Major Selection -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg fade-in">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-check-circle me-2"></i>Select Your Course Major
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <form id="majorForm">
                            <div class="mb-4">
                                <p class="text-muted mb-4">Choose the field of study that best matches your academic focus:</p>
                                <div class="row g-3">
                                    <% if (majors) { %>
                                        <% majors.forEach((major, index) => { %>
                                            <div class="col-md-6">
                                                <div class="form-check p-3 border rounded-3 hover-lift major-card">
                                                    <input class="form-check-input major-radio" type="radio" 
                                                           name="major" value="<%= major %>" 
                                                           id="major-<%= index %>">
                                                    <label class="form-check-label fw-semibold" for="major-<%= index %>">
                                                        <i class="fas fa-<%= getMajorIcon(major) %> me-2 text-success"></i>
                                                        <%= major %>
                                                    </label>
                                                    <div class="form-text mt-2">
                                                        <%= getMajorDescription(major) %>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }); %>
                                    <% } %>
                                </div>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg" id="searchBtn" disabled>
                                    <i class="fas fa-search me-2"></i>Find Related Careers
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Results Section -->
<section id="resultsSection" class="py-5" style="display: none; background: linear-gradient(135deg, var(--gray-50) 0%, var(--gray-100) 100%);">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3 class="mb-4 fw-bold">
                    <i class="fas fa-search me-2 text-success"></i>Related Career Opportunities
                </h3>
                <div id="resultsContainer">
                    <!-- Results will be populated by JavaScript -->
                </div>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('majorForm');
    const searchBtn = document.getElementById('searchBtn');
    const radioButtons = document.querySelectorAll('.major-radio');
    
    // Handle radio button changes
    radioButtons.forEach(radio => {
        radio.addEventListener('change', function() {
            searchBtn.disabled = false;
            searchBtn.innerHTML = '<i class="fas fa-search me-2"></i>Find Related Careers';
        });
    });
    
    // Handle form submission
    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const selectedMajor = document.querySelector('.major-radio:checked');
        
        if (!selectedMajor) {
            alert('Please select a major');
            return;
        }
        
        await searchCareers(selectedMajor.value);
    });
    
    async function searchCareers(major) {
        searchBtn.disabled = true;
        searchBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Searching...';
        
        try {
            const response = await fetch('/api/search/majors', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ major })
            });
            
            const data = await response.json();
            
            if (data.success) {
                displayResults(data.jobs, `Careers related to ${major}`);
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error searching careers: ' + error.message);
        } finally {
            searchBtn.disabled = false;
            searchBtn.innerHTML = '<i class="fas fa-search me-2"></i>Find Related Careers';
        }
    }
    
    function displayResults(jobs, title) {
        const resultsSection = document.getElementById('resultsSection');
        const resultsContainer = document.getElementById('resultsContainer');
        
        if (jobs.length === 0) {
            resultsContainer.innerHTML = `
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    No matching careers found for this major. This should not happen with the improved algorithm.
                </div>
            `;
        } else {
            let html = `
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    Found ${jobs.length} careers related to your major
                </div>
                <div class="row">
            `;
            
            jobs.forEach((job, index) => {
                html += `
                    <div class="col-lg-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title mb-0">
                                        <span class="badge bg-success me-2">${index + 1}</span>
                                        ${job.title}
                                    </h6>
                                    <span class="badge bg-success">${job.match_score}% match</span>
                                </div>
                                <p class="card-text text-muted">
                                    ${job.description.substring(0, 150)}...
                                </p>
                                <div class="d-grid">
                                    <a href="/job/${job.onetsoc_code}" class="btn btn-outline-success">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            html += '</div>';
            resultsContainer.innerHTML = html;
        }
        
        resultsSection.style.display = 'block';
        resultsSection.scrollIntoView({ behavior: 'smooth' });
    }
});
</script>

<% 
